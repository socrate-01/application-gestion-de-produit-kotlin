<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.AndroidProjectGLSIB.product_details">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/mImage"
        android:layout_width="wrap_content"
        android:layout_height="187dp"
        app:srcCompat="@drawable/ordinaire"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginLeft="70dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="20dp"
        android:layout_height="40dp"></TextView>

    <TextView
        android:id="@+id/mTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: The Ordinary"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="232dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="20dp"
        android:layout_height="40dp"></TextView>

    <TextView
        android:id="@+id/mSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: 20000fr"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="277dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="20dp"
        android:layout_height="40dp"></TextView>



    <TextView
        android:id="@+id/mCategorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category: SkinCare"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="323dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"></TextView>

    <TextView
        android:id="@+id/mDescribe"
        android:layout_width="364dp"
        android:layout_height="151dp"
        android:text="Describe: The Ordinary est un produit efficace qui rend votre peau eclatante et sans taches ni boutons..."
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="393dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="Back" />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>